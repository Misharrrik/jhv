<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="0,0,591,0">
        <Grid Height="47" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Button Margin="0,0,150,0" Content="1"/>
            <Button Margin="0,0,150,0" Content="4"/>
            <Button Margin="0,0,150,0" Content="7"/>
            <Button Margin="50,-60,100,40" Content="2"/>
            <Button Margin="50,-40,100,20" Content="5"/>
            <Button Margin="50,-20,100,0" Content="8"/>
            <Button Margin="100,-60,50,40" Content="3"/>
            <Button Margin="100,-40,50,20" Content="6"/>
            <Button Margin="100,-20,50,0" Content="9"/>
        </Grid>
    </StackPanel>
</Window>